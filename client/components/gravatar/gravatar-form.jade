form#gravatar-form.user-form(name="gravatarForm")
  h3 Choose your gravatar
  label(for='email') Email
  input.form-control(type='email' name='email' ng-model='formData.email' placeholder='Please input your gravatar email')
  
  div(ng-if='isShowSettings')
    label(for='size') Image Size (1px to 2048px)
    input.form-control(type='number' min='1' max='2048' name='size' ng-model='formData.size')
    label(for='defaultImage') Default Image &nbsp;
    select(name='defaultImage' ng-model='formData.defaultImage' ng-options='::image as image.name for image in props.defaultImages')
    label(for='rating') Image Rating &nbsp;
    select(name='rating' ng-model='formData.rating' ng-options='::rating as rating.name for rating in props.ratings')
  
  input(type='submit' value='Preview' ng-if='isShowPreview' ng-click='setAvatarUrl()' ng-disabled='gravatarForm.$invalid || formData.email.length === 0')

div(ng-if='isShowPreview') 
  p.avatar-preview(ng-if='isShowPreviewUrl') {{props.avatarUrl}} 
  p.avatar-preview
    img(src='{{props.avatarUrl}}')
  
