 {{chatData.userName}} in {{chatData.roomId}}
.chat
  .column
    ul.avatars
      li(ng-repeat="message in chatData.messages track by $index")
        .avatar-image-left
          img(src="{{message.avatarUrl}}")
          .username
            p {{::message.userName}}
        .speech-bubble-left 
          .speech-bubble-content {{::message.msg}}
        .clearfix
  .column.right
    form.write-section(id="chatinput")
      textarea(form="chatinput" ng-model="chatinputtext")
      input(type="submit" value="Send" ng-click="submitMessage()")
    .read-section  
  .clearfix
